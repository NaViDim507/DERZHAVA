<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок вкладки -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="ТЕРРИТОРИЯ"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Общее количество территории -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Общая территория: 0"
            android:textColor="@color/derzhava_text_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Блок по типам территорий, в стиле экрана ресурсов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Свободная земля -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_derzhava_button_base"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Свободная земля: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Леса -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_derzhava_button_base"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvLesa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Леса: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Шахты -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_derzhava_button_base"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvShah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Шахты: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Рудники -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_derzhava_button_base"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvRudn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Рудники: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Поля -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_derzhava_button_base"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvPole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Поля: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Кнопка Назад -->
        <Button
            android:id="@+id/btnBack"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Назад" />

    </LinearLayout>
</ScrollView>
