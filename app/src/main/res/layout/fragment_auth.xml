<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Логотип -->
        <TextView
            android:id="@+id/tvLogoAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="ДЕРЖАВА"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Карточка регистрации -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Регистрация"
                android:textColor="@color/derzhava_text_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRulerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:hint="Логин (имя правителя)"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/white"
                android:hint="Название державы"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:color/white"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/btnAction"
                style="@style/Derzhava.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зарегистрироваться" />

            <TextView
                android:id="@+id/tvSwitchMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Уже есть аккаунт? Войти"
                android:textColor="@color/derzhava_text_light"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
