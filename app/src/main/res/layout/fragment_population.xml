<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="НАСЕЛЕНИЕ"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Общее население -->
        <TextView
            android:id="@+id/tvTotalPopulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Общее население: 0"
            android:textColor="@color/derzhava_text_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Блоки по категориям -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Свободные рабочие -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Рабочие (свободные)"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvWorkersFree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Рабочие на производстве -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="На производстве (рабочих)"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvWorkersProduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Учёные -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Учёные"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvScientists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Пехотинцы -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Пехотинцы"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvInfantry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Казаки -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Казаки"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCossacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Гвардейцы -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Гвардейцы"
                    android:textColor="@color/derzhava_text_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGuards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Кнопка Назад -->
        <Button
            android:id="@+id/btnBack"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Назад" />

    </LinearLayout>
</ScrollView>
