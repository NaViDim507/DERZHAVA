<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="ВОЕННАЯ БАЗА"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Армия -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Армия"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvArmySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Пехота: 0\nКазаки: 0\nГвардия: 0\nКатапульты: 0"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvArmyParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Пехота: атака 0 / защита 0\nКазаки: атака 0 / защита 0\nГвардия: атака 0 / защита 0"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="13sp" />
        <!-- Статус обучения войск (kmb) -->
        <TextView
            android:id="@+id/tvTrainingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Обучение не ведётся"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="13sp" />

        <!-- Кнопки армии -->
        <Button
            android:id="@+id/btnManageArmy"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Военные (кол-во войск)" />

        <Button
            android:id="@+id/btnTrainTroops"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Обучение войск" />

        <Button
            android:id="@+id/btnTrainParams"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Параметры войск" />

        <Button
            android:id="@+id/btnCatapults"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Катапульты" />
			
		<Button
            android:id="@+id/btnFireArmy"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Уволить военных" />

        <!-- Поход (заглушка вместо войн) -->
        <TextView
            android:id="@+id/tvWarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Поход"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/warListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical" />

        <!-- Назад -->
        <Button
            android:id="@+id/btnBack"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Вернуться в державу" />

    </LinearLayout>
</ScrollView>
