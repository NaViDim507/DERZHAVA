<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Игрок"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Информация о пользователе -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvRulerNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Логин"
                android:textColor="@color/derzhava_text_dark" />

            <TextView
                android:id="@+id/tvRulerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/derzhava_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRegDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Регистрация:"
                android:textColor="@color/derzhava_text_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvLastLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Последний вход:"
                android:textColor="@color/derzhava_text_dark"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус:"
                android:textColor="@color/derzhava_text_dark"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Страна -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Название страны"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etCountryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Экономика / ресурсы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ресурсы и население"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Деньги"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Свободные рабочие"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Учёные (боты)"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etBots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Металлурги"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etMetallWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Шахтёры"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etMineWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Лесорубы"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etWoodWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Промышленность"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etIndustryWorkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Ресурсные поля -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Земля"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Еда"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Дерево"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etWood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Металл"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etMetal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Минералы"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etMineral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Здания -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Здания"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Комбинат (domik1)"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Городок (domik2)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Командный центр (domik3)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Военная база (domik4)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Периметр (domik5)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Биржа (domik6)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сторожевая башня (domik7)"
            android:layout_marginTop="4dp"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etDom7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Армия -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Армия"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пехота"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etInfantry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Казаки"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etCossacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Гвардия"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGuards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Катапульты"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etCatapults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Командный центр -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Командный центр"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Разведка"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etIntel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Диверсия"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etSabotage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Воровство"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etTheft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Агитация"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etAgitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Генерал -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Генерал"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уровень"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Атака"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Защита"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Лидерство"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenLeadership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Опыт (XP)"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Битвы"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenBattles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Победы"
            android:textColor="@color/derzhava_text_dark" />
        <EditText
            android:id="@+id/etGenWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Кнопки управления -->
        <Button
            android:id="@+id/btnSave"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Сохранить" />

        <Button
            android:id="@+id/btnMarket"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Биржа" />

        <Button
            android:id="@+id/btnBack"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Назад" />
    </LinearLayout>

</ScrollView>