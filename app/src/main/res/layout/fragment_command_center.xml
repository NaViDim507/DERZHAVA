<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derzhava_bg"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/derzhava_header"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="КОМАНДНЫЙ ЦЕНТР"
            android:textColor="@color/derzhava_text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Краткая инфа + деньги -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_derzhava_button_base"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Уровень: 1"
                android:textColor="@color/derzhava_button_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Деньги: 0"
                android:textColor="@color/derzhava_button_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvShortInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Настройка разведки, диверсий, воров и вербовки."
                android:textColor="@color/derzhava_button_text"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- СПЕЦСЛУЖБЫ (один компактный блок) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_derzhava_button_base"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Спецслужбы"
                android:textColor="@color/derzhava_button_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Разведка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Разведка"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvIntelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnIntelPlus"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="+"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvIntelCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Стоимость повышения: 0"
                android:textColor="@color/derzhava_button_text"
                android:textSize="11sp" />

            <!-- Диверсия -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Диверсия"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvSabotageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnSabotagePlus"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="+"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSabotageCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Стоимость повышения: 0"
                android:textColor="@color/derzhava_button_text"
                android:textSize="11sp" />

            <!-- Воровство -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Воровство"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTheftValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnTheftPlus"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="+"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTheftCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Стоимость повышения: 0"
                android:textColor="@color/derzhava_button_text"
                android:textSize="11sp" />

            <!-- Вербовка -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Вербовка"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvAgitationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnAgitationPlus"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:text="+"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAgitationCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Стоимость повышения: 0"
                android:textColor="@color/derzhava_button_text"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- ГЕНЕРАЛ (ещё более компактный блок) -->
        <LinearLayout
            android:id="@+id/layoutGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_derzhava_button_base"
            android:padding="8dp">

            <!-- Заголовок + уровень в одной строке -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Генерал"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGeneralLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Уровень: 1"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Статы + коэффициент одной строкой -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGeneralStats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Атака: 0, Защита: 0, Лидерство: 0"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvGeneralCoeff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1.00"
                    android:textColor="@color/derzhava_button_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- маленькие кнопки прокачки, прижаты вправо -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTrainAttack"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="А"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnTrainDefense"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:text="З"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnTrainLeadership"
                    style="@style/Derzhava.Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:text="Л"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Спецоперации -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_derzhava_button_base"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Спецоперации"
                android:textColor="@color/derzhava_button_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOpsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Диверсии против соседей. Пока — тренировка на NPC."
                android:textColor="@color/derzhava_button_text"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnOpenSpecialOps"
                style="@style/Derzhava.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Открыть спецоперации" />
        </LinearLayout>


        <!-- Назад -->
        <Button
            android:id="@+id/btnBack"
            style="@style/Derzhava.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Назад" />

    </LinearLayout>
</ScrollView>
